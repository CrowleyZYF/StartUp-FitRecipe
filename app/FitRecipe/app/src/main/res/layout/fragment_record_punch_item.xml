<?xml version="1.0" encoding="utf-8"?>
<cn.fitrecipe.android.UI.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="2dp">

    <ImageView
        android:id="@+id/punch_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/punch_temp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_logo"
            android:layout_margin="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="-15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="打卡第"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:shadowColor="@color/login_input_text_color"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4"/>

                    <TextView
                        android:id="@+id/punch_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:shadowColor="@color/login_input_text_color"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:shadowColor="@color/login_input_text_color"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_meal_white"/>

                        <TextView
                            android:id="@+id/punch_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上午加餐"
                            android:textSize="6sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="5dp"
                            android:shadowColor="@color/login_input_text_color"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="4"/>

                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_bmi_white"/>

                        <TextView
                            android:id="@+id/punch_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="258kcal"
                            android:textSize="6sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="2dp"
                            android:shadowColor="@color/login_input_text_color"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="4"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
            
            <!--<cn.fitrecipe.android.UI.PieChartView
                android:id="@+id/punch_piechart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"/>-->


        </LinearLayout>


    </RelativeLayout>



</cn.fitrecipe.android.UI.SquareLayout>
