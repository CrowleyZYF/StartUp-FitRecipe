<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_card_container"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    card_view:cardPreventCornerOverlap="false"
    >
    <RelativeLayout
        android:id="@+id/recipe_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ztest001"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:id="@+id/recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="牛油果鸡蛋三明治"
                android:shadowColor="@color/login_input_text_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/recipe_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="增肌"
                android:layout_centerVertical="true"
                android:background="@drawable/red_button_background"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="12sp"
                android:textColor="#ffffff"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_below="@id/recipe_title">

            <ImageView
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_left_thin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recipe_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="烹饪时间：20min"
                    android:shadowColor="@color/login_input_text_color"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/recipe_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="热量：220kcal/人份"
                    android:shadowColor="@color/login_input_text_color"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_like"/>

            <TextView
                android:id="@+id/recipe_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:text="收藏 182"
                android:shadowColor="@color/login_input_text_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:textSize="12sp"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
