<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:scrollbars="none"
    android:fadingEdge="vertical"
    android:id="@+id/recipe_scrollview"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/share_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recipe_pic"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/loading_pic2"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="-40dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="14dp"
                    android:src="@drawable/icon_tags"/>

                <TextView
                    android:id="@+id/recipe_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-15dp"
                    android:text="西式、美味、酸辣、好吃"
                    android:textSize="12sp"
                    android:shadowColor="@color/login_input_text_color"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/recipe_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="西兰花炒虾球"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/login_input_text_color"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/recipe_feature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="增肌"
                        android:background="@drawable/red_button_background"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:layout_gravity="center_vertical"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/recipe_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="烹饪时间：25min"
                        android:textSize="12sp"
                        android:textColor="@color/login_input_text_color"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/recipe_calorie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热量：220kcal/100g"
                        android:textSize="12sp"
                        android:textColor="@color/login_input_text_color"
                        android:layout_marginRight="10dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_like_green"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/recipe_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏 182"
                        android:textSize="12sp"
                        android:textColor="@color/login_input_text_color"
                        android:layout_marginRight="15dp"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_comment_green"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/recipe_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论 18"
                        android:textSize="12sp"
                        android:textColor="@color/login_input_text_color"
                        android:layout_marginRight="10dp"/>


                </LinearLayout>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatar_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/pic_header"
                app:border_width="3dp"
                app:border_color="#ffffff"/>

            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="官方出品"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/login_input_text_color"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/recipe_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        菜谱来自我的大姨，她很喜欢研究这些泰式的菜谱，推荐的这个配方全家一直都很喜欢，就是挑鱼刺比较麻烦一些，而且我只试过拿哥鱼肉来做，大家可以试试是否其它鱼肉也可以做哒！"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/login_input_text_color"/>

        </LinearLayout>

        <TextView
            android:id="@+id/check_procedure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:text="查看步骤"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/icon_selector"/>

        <include layout="@layout/activity_recipe_info_ingredient" />

        <include layout="@layout/activity_recipe_info_nutrition" />

    </LinearLayout>
</ScrollView>