<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/base_color"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recipe_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:text="番茄牛腩："
                android:textColor="#ffffff"
                android:background="@drawable/icon_selector"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="right">

                <TextView
                    android:id="@+id/recipe_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textSize="24sp"
                    android:singleLine="true"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/search_unit"
                    android:textColor="#ffffff"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/stage_02_down"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="3">
                
                <cn.fitrecipe.android.UI.PieChartView
                    android:id="@+id/piechartview"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <include layout="@layout/dialog_input" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/search_pre"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/search_pre"
                android:textColor="@color/base_color"/>

            <TextView
                android:id="@+id/search_finish"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/search_finish"
                android:textColor="@color/base_color"
                android:layout_marginRight="20dp"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>