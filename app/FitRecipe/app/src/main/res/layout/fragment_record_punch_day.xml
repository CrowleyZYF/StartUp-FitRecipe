<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/background_color">
        
        <ImageView
            android:id="@+id/icon_day"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_day"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/punch_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8月6日"
            android:textSize="16sp"
            android:textColor="@color/login_input_text_color"
            android:layout_toRightOf="@id/icon_day"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:src="@drawable/icon_share_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/theme_line"/>

    <cn.fitrecipe.android.UI.PunchGridView
        android:id="@+id/punch_day_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:listSelector="@android:color/transparent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_margin="0dp"
        android:numColumns="3"
        android:background="@color/background_color"
        android:horizontalSpacing="1px"
        android:verticalSpacing="1px"
        android:scrollbars="none">
    </cn.fitrecipe.android.UI.PunchGridView>

</LinearLayout>