<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/knowledge_card_container"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="10dp"
    card_view:cardPreventCornerOverlap="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/choice_background"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/loading_pic4"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/choice_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/muscle"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/perfect_background"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/choice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/choice_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    />

                <TextView
                    android:id="@+id/choice_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="低碳饮食法"
                    android:shadowColor="@color/login_input_text_color"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textSize="24sp"
                    android:textColor="#ffffff"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/choice_other_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_below="@id/choice_title"
                android:layout_marginLeft="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="计划类型："
                    android:shadowColor="@color/login_input_text_color"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/choice_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/plan_food"
                    android:shadowColor="@color/login_input_text_color"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_rank_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_below="@id/choice_other_info"
                android:layout_marginLeft="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="难度"
                    android:shadowColor="@color/login_input_text_color"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>

                <LinearLayout
                    android:id="@+id/choice_hard_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/choice_hard_rank_01"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_cook_hard"
                        android:layout_marginRight="2dp"/>

                    <ImageView
                        android:id="@+id/choice_hard_rank_02"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_cook_hard"
                        android:layout_marginRight="2dp"/>

                    <ImageView
                        android:id="@+id/choice_hard_rank_03"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_cook_hard"
                        android:layout_marginRight="2dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="美味"
                    android:shadowColor="@color/login_input_text_color"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>

                <LinearLayout
                    android:id="@+id/choice_delicious_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/choice_delicious_rank_01"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/icon_like_noshadow"
                        android:layout_marginRight="2dp"/>

                    <ImageView
                        android:id="@+id/choice_delicious_rank_02"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/icon_like_noshadow"
                        android:layout_marginRight="2dp"/>

                    <ImageView
                        android:id="@+id/choice_delicious_rank_03"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/icon_like_noshadow"
                        android:layout_marginRight="2dp"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/isUsed"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="已选用"
                android:textColor="@color/base_color"
                android:textSize="10sp"
                android:background="@drawable/join_button_base"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/author_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pic_header"
                app:border_width="1dp"
                app:border_color="#c6c6c6"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="陈柏龄"
                    android:textSize="16sp"
                    android:textColor="@color/login_input_text_color"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:id="@+id/author_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="官方原创"
                    android:textSize="10sp"
                    android:textColor="@color/login_input_text_color"
                    android:paddingTop="2dp"
                    android:paddingLeft="8dp"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/choice_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="9天"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/icon_read_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_calendar"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/choice_days"/>

                <TextView
                    android:id="@+id/choice_join"
                    android:layout_toLeftOf="@id/icon_read_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="1424人"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/icon_follow_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_user_gray"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/choice_join"/>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>