<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plan_num_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="1"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_v"/>

        <TextView
            android:id="@+id/plan_num_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="2"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_v"/>

        <TextView
            android:id="@+id/plan_num_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="3"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/theme_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plan_num_04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="4"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_v"/>

        <TextView
            android:id="@+id/plan_num_05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="5"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_v"/>

        <TextView
            android:id="@+id/plan_num_06"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="6"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/theme_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plan_num_07"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="7"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_v"/>

        <TextView
            android:id="@+id/plan_num_08"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="8"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_v"/>

        <TextView
            android:id="@+id/plan_num_09"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="9"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/theme_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plan_num_dash"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="."/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_v"/>

        <TextView
            android:id="@+id/plan_num_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="0"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_v"/>

        <TextView
            android:id="@+id/plan_num_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/login_input_text_color"
            android:background="@drawable/num_button"
            android:gravity="center"
            android:text="确定"/>

    </LinearLayout>



</LinearLayout>