<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/procedure_img"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/loading_pic2"
        android:scaleType="centerCrop"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/procedure_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="35sp"
            android:textColor="@color/active_color"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:gravity="top"/>

        <TextView
            android:id="@+id/procedure_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="用一个大碗，将紫甘蓝，鸡蛋，洋葱少许，金枪鱼肉，淋上番茄酱，芝麻酱，橄榄油, 混合搅拌"
            android:textSize="16sp"
            android:lineSpacingExtra="3dp"
            android:gravity="top"
            android:layout_marginTop="-5dp"/>

    </LinearLayout>

</LinearLayout>