<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choice_card_container"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardPreventCornerOverlap="false"
    >

    <RelativeLayout
        android:id="@+id/choice_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loading_pic4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/choice_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/muscle"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/perfect_background"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/choice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/choice_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                />

            <TextView
                android:id="@+id/choice_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="低碳饮食法"
                android:shadowColor="@color/login_input_text_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:textSize="22sp"
                android:textColor="#ffffff"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/choice_rank_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_below="@id/choice_title"
            android:layout_marginLeft="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="难度"
                android:shadowColor="@color/login_input_text_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:textSize="10sp"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:id="@+id/choice_hard_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/choice_hard_rank_01"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_cook_hard"
                    android:layout_marginRight="2dp"/>

                <ImageView
                    android:id="@+id/choice_hard_rank_02"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_cook_hard"
                    android:layout_marginRight="2dp"/>

                <ImageView
                    android:id="@+id/choice_hard_rank_03"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_cook_hard"
                    android:layout_marginRight="2dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="美味"
                android:shadowColor="@color/login_input_text_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:textSize="10sp"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:id="@+id/choice_delicious_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:id="@+id/choice_delicious_rank_01"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:src="@drawable/icon_like_noshadow"
                    android:layout_marginRight="2dp"/>

                <ImageView
                    android:id="@+id/choice_delicious_rank_02"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:src="@drawable/icon_like_noshadow"
                    android:layout_marginRight="2dp"/>

                <ImageView
                    android:id="@+id/choice_delicious_rank_03"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:src="@drawable/icon_like_noshadow"
                    android:layout_marginRight="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/choice_other_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_below="@id/choice_rank_info"
            android:layout_marginLeft="2dp">

            <TextView
                android:id="@+id/choice_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="8"
                android:shadowColor="@color/login_input_text_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:textSize="10sp"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="天"
                android:shadowColor="@color/login_input_text_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/choice_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/plan_food"
                android:shadowColor="@color/login_input_text_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:textSize="10sp"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/choice_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:text="123456"
                android:shadowColor="@color/login_input_text_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:textSize="12sp"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:text="人已选用"
                android:shadowColor="@color/login_input_text_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:textSize="12sp"
                android:textColor="#ffffff"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
