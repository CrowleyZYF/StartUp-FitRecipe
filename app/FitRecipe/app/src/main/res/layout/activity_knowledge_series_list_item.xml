<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/knowledge_card_container"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_margin="10dp"
    card_view:cardPreventCornerOverlap="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/series_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="陈柏龄的自留地"
            android:textSize="16sp"
            android:textColor="@color/login_input_text_color"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/series_background"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loading_pic2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/series_author_background"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pic_header"
                app:border_width="1dp"
                app:border_color="#000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/series_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="陈柏龄"
                    android:textSize="16sp"
                    android:textColor="@color/login_input_text_color"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:id="@+id/series_author_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="官方原创"
                    android:textSize="10sp"
                    android:textColor="@color/login_input_text_color"
                    android:paddingTop="2dp"
                    android:paddingLeft="8dp"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/series_read_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="1024"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/icon_read_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_read"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/series_read_number"/>

                <TextView
                    android:id="@+id/follow_number"
                    android:layout_toLeftOf="@id/icon_read_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="1424"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/icon_follow_number"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_follow_gray"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/follow_number"/>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>