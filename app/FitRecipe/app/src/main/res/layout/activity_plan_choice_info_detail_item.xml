<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/plan_item_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="1"
        android:textColor="@color/login_input_text_color"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/plan_item_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="1"
        android:textColor="@color/login_input_text_color"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/plan_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="牛奶"
        android:textColor="@color/login_input_text_color"
        android:textSize="14sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/plan_item_weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="100g"
        android:textSize="14sp"
        android:textColor="#a4a4a4"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/plan_item_calories"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="200kcal"
        android:textSize="14sp"
        android:textColor="#a4a4a4"
        android:gravity="center_vertical"/>

</LinearLayout>