<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fitrecipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/category_layout">

    <cn.fitrecipe.android.UI.SlidingMenu
        android:id="@+id/filter_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fitrecipe:leftPadding="150dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/base_color"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/category"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_back_white"
                        android:background="@drawable/icon_selector"/>

                    <ImageView
                        android:id="@+id/filter_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_filter"
                        android:background="@drawable/icon_selector"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/category_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/theme_color"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="35dp"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:lineSpacingExtra="3dp"
                            android:text="增肌正餐菜谱：鸡肉"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="35dp"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:lineSpacingExtra="3dp"
                            android:text="鸡肉营养丰富，高蛋白，低脂肪，尤其是鸡胸肉，是增肌中最为常用的家禽肉。"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/time_sort"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@color/theme_color"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="烹饪时间"/>

                            <ImageView
                                android:id="@+id/time_sort_icon"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_arrow_up"
                                android:layout_marginLeft="3dp"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="2px"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_v"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@color/theme_color"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="收藏数"/>

                            <ImageView
                                android:id="@+id/like_sort_icon"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_arrow_up"
                                android:layout_marginLeft="3dp"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="2px"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_v"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@color/theme_color"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="热量"/>

                            <ImageView
                                android:id="@+id/calorie_sort_icon"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_arrow_up"
                                android:layout_marginLeft="3dp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@drawable/theme_line"/>





                </LinearLayout>

                <ScrollView
                    android:id="@+id/category_result_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/background_color"
                    android:scrollbars="none"
                    android:fadingEdge="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/theme_recipe_recycler_view"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        />
                </ScrollView>

            </LinearLayout>

            <include layout="@layout/filter" />


        </LinearLayout>


    </cn.fitrecipe.android.UI.SlidingMenu>



</RelativeLayout>

